<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/news_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textSize="30sp"
                    android:layout_margin="15dp"
                    android:textColor="#212121"
                    android:text="给SilverBlog设计了一个手机文章发布器" />

                <View
                    android:layout_below="@+id/title"
                    android:id="@+id/Lines"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_below="@+id/Lines"
                    android:id="@+id/excerpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SilverBlog这个项目，最初开发的目的是为企业提供一个简单Markdown网站管理程序。在把它用到个人博客方面的时候，就出现了手机管理不方便的问题。手机上的SSH不方便输入中文用手机登录SSH不方便使用VIM等命令行工具，感觉别扭。综上问题，本人设计了一个C/S的解决方案来"
                    android:layout_margin="15dp" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>